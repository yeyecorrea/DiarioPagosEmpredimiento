@model Customer
@{
    ViewData["Title"] = "Editar clientes";
}

<div class="text-center">
    <h1>Editar Cliente : @Model.FirstName</h1>
</div>

<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-8 col-lg-8">
            <form asp-action="EditCustomer" class="border p-5 bg-light rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="CustomerId" />
                <!--Campo FirstName-->
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" type="text" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <!--Campo LastName-->
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" type="text" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <!--Campo Address-->
                <div class="form-group mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" type="text" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <!--Campo PhoneNumber-->
                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <!--Campo UserEmail-->
                <div class="form-group mb-3">
                    <label asp-for="CustomerEmail" class="form-label"></label>
                    <input asp-for="CustomerEmail" type="text" class="form-control" />
                    <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Editar</button>
                    <a asp-action="Index" class="btn btn-dark ml-5 ">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!--Renderisamos scripts en layaut secccion scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>

}
